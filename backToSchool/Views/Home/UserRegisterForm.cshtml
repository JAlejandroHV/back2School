
@{
    ViewBag.Title = "UserRegisterForm";
}



<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header text-center">
                    Datos del Usuario
                </div>
                <div class="card-body">
                    <form>
                        <div class="form col-12 my-2 row">
                            <div class="col-lg-4 col-12 my-2">
                                <label for="nombre">Nombre de usuario</label>
                                <input class="form-control text-box single-line text-box single-line" name="username" placeholder="Ingrese nombre" type="text" value="">
                            </div>
                            <div class="col-lg-4 col-12 my-2">
                                <label for="nombre">Contraseña</label>
                                <input class="form-control text-box single-line text-box single-line" name="password" placeholder="Ingrese contraseña" type="password" value="">
                            </div>
                            <div class="col-lg-4 col-12 my-2">
                                <label>Tipo de rol</label>
                                <select class="form-control text-box single-line" id="roles" name="roles" placeholder="Seleccione un rol">
                                    <option value="">--- Selecciona Rol ---</option>
                                </select>
                            </div>
                            <div class="col-12 mt-5">
                                <input type="submit" value="Registrar nuevo deudor" class="btn btn-block btn-rounded btn-outline-success">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

